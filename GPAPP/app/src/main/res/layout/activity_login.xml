<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:statusBarScrim="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.samer.gpapp.LoginActivity">







    <android.support.v4.widget.NestedScrollView
        android:background="#ffffffff"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="100">

            <TextView
                android:layout_marginTop="40dp"
                android:fontFamily="cursive"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:textSize="50dp"
                android:layout_height="wrap_content"
                android:text="DeliverBot"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title" />


            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#ffffffff" />




            <EditText
                android:id="@+id/login_id"
                android:hint="Your ID "
                android:layout_width="wrap_content"
                android:textColor="#ffffffff"
                android:textColorHint="#ffffffff"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:editable="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginStart="15dp"
        android:textColor="#ffffffff"
        android:layout_gravity="start"
        android:textSize="25dp"
        android:text="Name :            "
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <EditText
        android:layout_marginEnd="125dp"
                android:id="@+id/login_name"
                android:textColor="#ffffffff"
                android:textColorHint="#ffffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:hint="name" />
</LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginStart="15dp"
                android:textColor="#ffffffff"
                android:layout_gravity="start"
                android:textSize="25dp"
                android:text="Password :   "
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


            <EditText

                android:layout_marginEnd="110dp"
                android:id="@+id/login_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:textColor="#ffffffff"
                android:textColorHint="#ffffffff"
                android:hint="password"
                android:inputType="textPassword" />
        </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark" />

            <TextView
                android:layout_marginEnd="20dp"
                android:layout_gravity="end"
                android:id="@+id/login_creat_new_accont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:textSize="20sp"
                android:onClick="TextCreatAccount"
                android:textColor="#ffea00"
                android:text="Creat new account" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/colorPrimaryDark" />


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/login_fab"
                android:onClick="LoginFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_sent_" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
